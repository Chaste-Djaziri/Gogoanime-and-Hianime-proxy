{
    "version": 2,
    "builds": [
      { "src": "api/**/*.ts", "use": "@vercel/node" },
      { "src": "public/**/*", "use": "@vercel/static" }
    ],
    "routes": [
      { "handle": "filesystem" },
      { "src": "/m3u8-proxy", "dest": "/api/m3u8-proxy.ts" },
      { "src": "/(.*)", "dest": "/api/index.ts" }
    ]
  }
  